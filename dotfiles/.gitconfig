[color]
	diff = auto
	status = auto
	branch = auto
[alias]
  ll = log --graph --decorate --abbrev-commit --stat -M -D
  st = status -uno
  diffw = diff --color-words='\\w+|.'
  diffchars = diff --color-words=.
  ready = rebase -i @{u}
  root = rev-parse --show-toplevel
  br = branch -vv
  show-merge = log --decorate --abbrev-commit --stat -M -n1 -p -m -c
  addnw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply -p0 --cached --ignore-whitespace --unidiff-zero -'
#[user]
#  name = ...
#  email = ...
[include]
  path = .gitconfiglocal
[diff]
	renames = copy
	noprefix = true
	algorithm = patience
[push]
	default = simple
[grep]
	patternType = perl
[core]
	pager = diff-highlight | less -S
[rerere]
	enabled = true
	autoupdate = true
[merge]
	tool = vimdiff
[pull]
	rebase = false
